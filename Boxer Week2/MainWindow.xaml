<Window x:Class="Boxer_Week2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Boxer_Week2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
        <TextBlock FontSize="18" FontWeight="Bold">Name:</TextBlock>
        <TextBox FontSize="18" Name="tbxName" MinWidth="100">Type name here</TextBox>
        <Button Name="btnAddMe" Click="btnAddMe_Click">Add Me!</Button>
        </StackPanel>
        <StackPanel Background="Beige">
            <TextBlock>Some stuff so we can see</TextBlock>
            <ListBox Name="lbxBoxers" Opacity=".8" MinHeight="100"></ListBox>
        </StackPanel>
    </StackPanel>
</Window>
